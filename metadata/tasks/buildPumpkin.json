{
  "name": "BUILD_PUMPKIN_TASK",
  "steps": [
    {
      "name": "Move download",
      "description": "Moves the downloaded ZIP file",
      "filename": "",
      "action": {
        "type": "PlatformFileMoveAction",
        "oldPath": "download",
        "newPath": "../download"
      }
    },
    {
      "name": "Unzip repo",
      "description": "Unpacks the repo which was downloaded as zip",
      "filename": "../download",
      "action": {
        "type": "PlatformFileUnzipAction"
      }
    },
    {
      "name": "Delete repo zip file",
      "description": "Deletes the downloaded zip file of the repo",
      "filename": "../download",
      "action": {
        "type": "PlatformFileDeleteAction"
      }
    },
    {
      "name": "Build Pumpkin",
      "description": "Build the binary for Pumpkin",
      "filename": "../Pumpkin-%version_commitHash%",
      "action": {
        "type": "PlatformExecuteCommandAction",
        "command": "cargo build --release"
      }
    },
    {
      "name": "Move binary",
      "description": "Moves and renames the builded binary of Pumpkin",
      "filename": "",
      "action": {
        "type": "PlatformFileMoveAction",
        "oldPath": "../Pumpkin-%version_commitHash%/target/release/pumpkin",
        "newPath": "pumpkin-%version_version%"
      }
    },
    {
      "name": "Delete target folder",
      "description": "Deletes the target (build) folder of pumpkin",
      "filename": "../Pumpkin-%version_commitHash%/target",
      "action": {
        "type": "PlatformDirectoryDeleteAction"
      }
    }
  ]
}